/*user info*/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 250rpx;
  background: #fff;
  
 
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  font-size: 30rpx;
  color: gray;
}

/*menu list*/
.tableviewcell {
	padding: 20rpx 40rpx;
	border-bottom: 1rpx solid #ddd;
	color: #666;
	background: white;
	display: flex;
	align-items: center;
  position:relative;
}

/*icon*/
.tableviewcell image {
	width: 40rpx;
	height: 40rpx;
}

/*text*/
.tableviewcell text {
	font-size: 15px;
	margin-left:15px;
}

/*button*/
.logout {
	margin: 30rpx;
}

.tabsee {
	padding: 20rpx 40rpx;
	border-bottom: 1rpx solid #ddd;
	color: #666;
	background: white;
	align-items: center;
  position:relative;
