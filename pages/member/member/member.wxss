/* pages/member/member/member.wxss */

.backgroundimg{
  width: 100%;
  height: 1500rpx;
  background-color: #bce672;
  
}
.top{
  width: 100%;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  font-size: 28rpx;
}
.icon{
  width: 128rpx;
  height: 128rpx;
  background-color: #FFF;
  border-radius: 180rpx;
  margin-top: 30rpx;
  margin-bottom: 10rpx;
}
.icon image{
  width: 100%;
  height: 100%;
}
.icon1{
  margin-top: 20rpx;
  width: 100%;
  text-align: center;
  box-sizing: border-box;
  padding: 10rpx 0;
  
}
.icon1 text{
  background-color: #0eb83a;
  box-sizing: border-box;
  padding: 10rpx 30rpx;
  border-radius: 5rpx;
  color: #FFF;
}
.icon2{
  width: 100%;
  text-align: center;
  box-sizing: border-box;
  padding: 10rpx 0;
}
.icon3{
  width: 100%;
  text-align: center;
  box-sizing: border-box;
  padding: 10rpx 0;
  color: #A20A0A;
}
.icontext{
  width: 100%;
  text-align: center;
  box-sizing: border-box;
  padding: 5rpx 0;
  color: #8F773B;
  margin-top: 100rpx;
}
.bottom{
  position:fixed;bottom:0px;
  text-align: center;
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx 0;
  background-color: #23BD1B;
  color: #FFF;
}
.mid{
  margin-top: 150rpx;
  width: 100%;
}
.midtitle{
  width: 100%;
  text-align: center;
  font-size: 30rpx;
  color: #8F773B;
}
.mid2{
  width: 100%;
  box-sizing: border-box;
  display: flex;
}
.mid2all{
  margin-left:20rpx; 
  margin-top: 30rpx;
  width: 280rpx;
  height: 350rpx;
  box-sizing: border-box;
  border-radius: 5rpx;
  background-color: #FFF;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
}
.mid2allhead{
  width: 100%;
  display: flex;
  justify-content: center;
}
.mid2allhead text{
  color: #FFF;
  box-sizing: border-box;
  padding: 0rpx 30rpx;
  background-color: #23BD1B;
  font-size: 30rpx;
}
.mid2allimg{
  margin-top: 20rpx;
  width: 110rpx;
  height: 110rpx;
  border-radius: 180rpx;
  background-color: #A20A0A;
  box-sizing: border-box;
  padding: 30rpx;
}
.mid2allimg image{
  width: 100%;
  height: 100%;
}
.mid2alltitle{
  width: 110%;
  text-align: center;
  color: red;
  padding: 5rpx;
  font-size: 32rpx;
}
.mid2allcontent{
  width: 100%;
  text-align: center;
  padding: 5rpx 50rpx;
  color: gray;
  font-size: 28rpx
}
.uploadWrap {
  display: -webkit-box;
}
