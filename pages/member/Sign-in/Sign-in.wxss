/* pages/member/Sign-in/Sign-in.wxss */
.sing_in{
  width: 100%;
  height: 330rpx;
  background-color: #bce672;
  display: flex;
  justify-content: center;
}
.sing_intext{
  margin: auto;
  color: #FFF;
  background-color: #0DC00D;
  width: 170rpx;
  height: 170rpx;
  display: flex;
  justify-content: center;
  border-radius: 180rpx;
}
.sing_intext text{
  margin: auto;
}
.table{
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  flex-wrap: wrap;
}
.tr{
  width: 100%;
  display: flex;
  justify-content: flex-start;
  font-size: 28rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.th{
  width: 14.288%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #0DC00D;
  border-right: 10rpx solid #FFF;
  box-sizing: border-box;
}
.td{
  width: 14.288%;
  height: 100rpx;
  text-align: center;
  background-color: #E3FCB2;
  line-height: 100rpx;
  color: #0DC00D;
  box-sizing: border-box;
  border-bottom: 5rpx solid #FFF;
  border-right: 10rpx solid #FFF;
}
.tdd{
  width: 14.288%;
  height: 100rpx;
  text-align: center;
  /* border: 2rpx solid #FFF; */
  background-color: #A7E046;
  line-height: 100rpx;
  color: #FFF;
  box-sizing: border-box;
  border-right: 10rpx solid #FFF;
  border-bottom: 5rpx solid #FFF;
}

/**index.wxss**/
.t_red{
  color: red;
}
.t_blue{
  color: #0DC00D;
}
.time{
  padding: 16rpx 20rpx;
  background-color: #FFF;
  display: flex;
  color: gray;
}
.time view{
  flex: 1;
  font-size: 30rpx;

}
.time view text{
  font-size: 38rpx;
}


 .week{
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
   display: flex;
  flex-wrap: wrap;

} 
.week view{
  width: 14.288%;
  height: 100rpx;
  line-height: 100rpx;
  display: inline-block;
  font-size: 28rpx;
  text-align: center;
  box-sizing: border-box;
}
 .week view text{
  width: 100%;
  height: 100%;
  display: inline-block;
} 

