/*主商品区*/
.container-goods {
	background: white;
  width: 100%;
  overflow: hidden;
}

.container-goods .caption {
	font-size: 10pt;
	/*width: 100%;*/
	line-height: 40rpx;
  height: 40rpx;
  overflow: hidden;
	/*text-indent: 20rpx;*/
	padding: 10rpx;
  display: block;
  text-align: center;
  color: red;
  background-color: #FFFFFF;
  font-family: Microsoft YaHei;
}
.container-goods .caption .slides{
  width: 40%;
  display: block;
  border-bottom: 1px solid #999;
  position: relative;
  top: 50%;
}
.container-goods .caption .slidess{
  width: 40%;
  display: block;
  border-bottom: 1px solid #999;
  position: relative;
  top: -50%;
  left: 60%;
}
.container-goods .caption .text_name{
  width: 10%;
  color: #ffffff;
  background:  #999999;
  border: 15rpx;
  padding: 5rpx 15rpx;
  border-radius:26rpx;

}

.main-goods {
/*	display: flex;
	flex-direction: row;
	justify-content: space-between;
	border-top: 1px solid #eee;*/
	background: white;
	display: inline-block;
  width: 100%;
}

.main-goods .single-goods {
	display: block;
	float: left;
	width: 45%;
  margin: 0 2%;
  margin-top:3%; 
  border-radius: 10rpx;
  border: 1px solid #eee;
  background-color: #fafafa;
}

.main-goods image {
	width: 200rpx;
	height: 200rpx;
	display: block;
	margin: 20rpx auto;
  border-radius: 6rpx;
}

.main-goods .title {
	display: block;
	width: 90%;
	color: #000;
	font-size: 28rpx;
	margin: 10rpx 10rpx;
	height: 60rpx;
	line-height: 32rpx;
	overflow: hidden;
}

.main-goods .summary {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
}

.main-goods .summary text {
	font-size: 28rpx;
	margin: 10rpx 20rpx;
}

.main-goods .summary .price {
	color: #f45c00;
  margin: 10rpx 10px;
}

.main-goods .summary .sale {
	color: #ffffff;
  font-size: 28rpx;
  position: relative;
  left: -40rpx;
  padding:7rpx 20rpx;
  background: #fba901;
  border-radius: 10rpx;
  z-index: 999

 
}
.main-goods .summary .sale text{
  margin-left: 4rpx;
  margin-right: 4rpx;
}

.func-areas {
  padding-left:40rpx;
  overflow: hidden;
  padding-bottom:70rpx; 
  background-color: #FFFFFF;
}
.func-areas .bar_titles{
  padding-right: 34rpx;
  padding-top:30rpx; 
  width: 20%;
  float: left;
font-size: 11pt;
}

.func-areas .bar_titles text{
  display: block;
 text-align: center;
 position: relative;
 left: -16rpx;
}
.func-areas image{
  width: 108rpx;
  height: 108rpx;
  border-radius:56rpx; 
  text-align: center;
}
